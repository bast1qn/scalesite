{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "@vitejs/plugin-react"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    // ✅ PERFECTIONISM: Strict type checking for production-ready code
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  // ✅ EXCLUDE: Don't type-check build artifacts and service worker
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "public/sw.js",
    "lib/design/animations.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}